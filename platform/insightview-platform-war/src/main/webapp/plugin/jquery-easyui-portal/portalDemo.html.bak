function addTable(){
	var p = $('<div/>').appendTo('body');
			p.panel({
				title:'TitleGridTable',
				content:'<table cellpadding="0" cellspacing="0" border="0" class="easyui-datagrid" id="example"></table>',
				height:200,
				closable:true,
				collapsible:true
			});
			doInitTable();
			$('#pp').portal('add', {
				panel:p,
				columnIndex:0
			});
			
			$('#pp').portal('resize');
			
}
	</script>
</head>
<body class="easyui-layout">
	<div region="north" class="title" border="false" style="height:60px;">
		jQuery EasyUI Portal
	</div>
	<div region="center" border="false">
		<div id="pp">
			<div style="width:30%;">
				
			</div>
			<div style="width:40%;">
				
			</div>
			<div style="width:30%;">
				
			</div>
			
		</div>
		
	</div>
		
	
</body>
</html>