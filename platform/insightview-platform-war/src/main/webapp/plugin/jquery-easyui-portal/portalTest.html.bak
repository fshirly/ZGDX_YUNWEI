<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Portal - jQuery EasyUI</title>
	<link rel="stylesheet" type="text/css" href="../easyui/themes/default/easyui.css">
	<link rel="stylesheet" type="text/css" href="../easyui/themes/icon.css">
	<link rel="stylesheet" type="text/css" href="portal.css">
	<style type="text/css">
		.title{
			font-size:16px;
			font-weight:bold;
			padding:20px 10px;
			background:#eee;
			overflow:hidden;
			border-bottom:1px solid #ccc;
		}
		.t-list{
			padding:5px;
		}
	</style>
	<script type="text/javascript" src="./jquery-1.9.1.min.js"></script>
	<script type="text/javascript" src="../easyui/jquery.easyui.min.js"></script>
	<script type="text/javascript" src="jquery.portal.js"></script>
	<!--<script type="text/javascript" src="../flotr2/hsd.js"></script>
	<script type="text/javascript" src="../flotr2/hsd-flotr2-examples.js"></script>-->
	<script type="text/javascript" src="../flotr2/hsd-flotr2.js"></script>
	
	<script>
		$(function(){
			$('#pp').portal({
				border:false,
				fit:true
			});
			add();
			addPie();
			
			
		});
		function add(){
			for(var i=0; i<3; i++){
				var p = $('<div/>').appendTo('body');
				p.panel({
					title:'Title'+i,
					content:'<div style="padding:5px;">Content'+(i+1)+'</div>',
					height:100,
					closable:true,
					collapsible:true
				});
				$('#pp').portal('add', {
					panel:p,
					columnIndex:i
				});
			}
			$('#pp').portal('resize');
			
			
			

			
		}
		function remove(){
			$('#pp').portal('remove',$('#pgrid'));
			$('#pp').portal('resize');
		}

		function drawPie(){
		
	 var
    d1 = [
        [0, 5]
    ],
        d2 = [
            [0, 3]
        ],
        d3 = [
            [0, 1.03]
        ],
        d4 = [
            [0, 3.5]
        ],
		container = document.getElementById("container"),
        graph;


    graph = Flotr.draw(container, [{
        data: d1,
        label: 'Comedy'
    }, {
        data: d2,
        label: 'Action'
    }, {
        data: d3,
        label: 'Romance',
        pie: {
            explode: 50
        }
    }, {
        data: d4,
        label: 'Drama'
    }], {
        HtmlText: false,
        grid: {
            verticalLines: false,
            horizontalLines: false
        },
        xaxis: {
            showLabels: false
        },
        yaxis: {
            showLabels: false
        },
        pie: {
            show: true,
            explode: 6
        },
        mouse: {
            track: true
        },
        legend: {
            position: 'se',
            backgroundColor: '#D2E8FF'
        }
    });

}

function addPie(){
	var p = $('<div/>').appendTo('body');
			p.panel({
				title:'TitlePie',
				content:'<div id="container" style="text-align:center;background:#f3eeaf;height:150px;width:100%;"></div>',
				height:200,
				closable:true,
				collapsible:true
			});
			$('#pp').portal('add', {
				panel:p,
				columnIndex:1
			});
			drawPie();
			$('#pp').portal('resize');

}


	</script>
</head>
<body class="easyui-layout">
	<div region="north" class="title" border="false" style="height:60px;">
		jQuery EasyUI Portal
	</div>
	<div region="center" border="false">
		<div id="pp">
			<div style="width:30%;">
				<!-- <div id="container" style="text-align:center;background:#f3eeaf;height:150px;width:100%;">

				</div> -->
			</div>
			<div style="width:40%;">
				
			</div>
			<div style="width:30%;">
				
			</div>
			
		</div>
		
	</div>
		
	
</body>
</html>